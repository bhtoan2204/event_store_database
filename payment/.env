# Server
SERVER_MODE=local
SERVER_GIN_MODE=debug
SERVICE_NAME=payment-service

# logging
LOG_LOG_LEVEL=debug
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=root
POSTGRES_PASSWORD=root
POSTGRES_DATABASE=event_sourcing_payment
POSTGRES_MAX_OPEN_CONNS=10
POSTGRES_MAX_IDLE_CONNS=5
POSTGRES_MAX_LIFETIME=3600

# Consul
CONSUL_ADDRESS=localhost:8500
CONSUL_SCHEME=http
CONSUL_DATA_CENTER=dc1
CONSUL_TOKEN=

# Event Store Database
ESDB_HOST=localhost
ESDB_PORT=2113 # GRPC

# Redis
REDIS_CONNECTION_URL=redis://:mypassword@localhost:6379
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT_SECONDS=5
REDIS_READ_TIMEOUT_SECONDS=3
REDIS_WRITE_TIMEOUT_SECONDS=3
REDIS_IDLE_TIMEOUT_SECONDS=60
REDIS_MAX_IDLE_CONN_NUMBER=5
REDIS_MAX_ACTIVE_CONN_NUMBER=20